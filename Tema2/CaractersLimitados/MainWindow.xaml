<Window x:Class="CaractersLimitados.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaractersLimitados"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="#FFFF0101" Offset="0"/>
                <GradientStop Color="#FFFFFDFD" Offset="1"/>
                <GradientStop Color="White" Offset="0.985"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox TextChanged="recuadroTextBox_TextChanged" x:Name="recuadroTextBox" HorizontalAlignment="Left" Height="328" Margin="25,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="729"/>
        <TextBlock x:Name="contadorLiniasTextBlock" HorizontalAlignment="Left" Margin="666,375,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="66" Height="19"/>

    </Grid>
</Window>
